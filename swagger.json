{
    "openapi": "3.0.0",
    "info": {
        "title": "Task API",
        "description": "Task API Information",
        "contact": {
            "name": "Blokoding"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local server"
        }
    ],
    "paths":{
        "/tasks": {
            "get": {
                "description": "Use to create a task",
                "responses": {
                    "200": {
                        "description": "A successfull response"
                    }
                }
            }
        },
        "/task": {
            "post": {
                "summary": "Create task",
                "description": "Use to request all tasks",
                "requestBody:": {
                    "content": {
                        "application/json": {
                            "schema": {
                                    "$ref": "#/components/schemas/Task"
                            },
                            "examples": {
                                "task": {
                                    "value": {
                                        "location": "Issy-les-Moulineaux"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A successfull response"
                    },
                    "500": {
                        "description": "Failure in creating task"
                    }
                }
            }
        }
    },         
    "components": {
        "schemas": {
            "Task": {
                "type": "object",
                "properties": {
                    "location": {
                        "type": "string",
                        "description": "Location of the mission",
                        "example": "Issy-les-Moulineaux"
                    },
                    "duration": {
                        "type": "number",
                        "description": "Duration of the mission",
                        "example": 12
                    },
                    "price": {
                        "type": "number",
                        "description": "Price",
                        "example": 100
                    },
                    "remote": {
                        "type": "number",
                        "description": "Percentage of work done remotely",
                        "example": 50
                    },
                    "start": {
                        "type": "string",
                        "description": "Day the mission starts",
                        "example": 12
                    },
                    "job": {
                        "type": "string",
                        "description": "Name of the job",
                        "example": "développeur ReactJs"
                    },
                    "context": {
                        "type": "string",
                        "description": "Context",
                        "example": "intégration au sein de l’équipe Engineering du pôle Industrialisation, Cloud and Data, le consultant contribuera aux activités APIs et API Management."
                    },
                    "mission": {
                        "type": "string",
                        "description": "Mission",
                        "example": "x Participer aux Comités d’Architecture pour garantir la bonne conformité des bonne pratique des APIs. Promouvoir les pratiques API First au sein du groupe. Rédiger Maintenir un Guideline de développement d’API (création de modèle d’API, ...)"
                    }
                }
            }
        }
    }
}